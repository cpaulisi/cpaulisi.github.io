---
const links = [
  { label: "Writing", href: "/#writing" },
  { label: "Projects", href: "/#projects" },
  { label: "Contact", href: "/#contact" },
];
---

<!-- Mobile top bar -->
<header class="md:hidden fixed top-0 left-0 right-0 z-50 flex items-center justify-between px-4 py-3 border-b"
  style={`background-color: var(--color-surface); border-color: var(--color-border);`}>
  <a href="/" class="font-mono font-bold text-sm" style="color: var(--color-accent);">cpaulisi</a>
  <div class="flex items-center gap-4">
    <nav class="flex gap-4">
      {links.map((link) => (
        <a href={link.href} class="text-xs font-mono" style="color: var(--color-text-muted);">
          {link.label}
        </a>
      ))}
    </nav>
    <button id="theme-toggle-mobile" class="p-1" style="color: var(--color-text-muted);" aria-label="Toggle theme">
      <svg class="sun-icon w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
      <svg class="moon-icon w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
      </svg>
    </button>
  </div>
</header>

<!-- Desktop sidebar -->
<aside class="hidden md:flex fixed top-0 left-0 h-screen w-56 flex-col justify-between p-6 border-r z-50"
  style={`background-color: var(--color-surface); border-color: var(--color-border);`}>
  <div>
    <a href="/" class="block mb-1">
      <span class="font-mono font-bold text-base" style="color: var(--color-accent);">Cullen Paulisick</span>
    </a>
    <p class="text-xs font-mono mb-8" style="color: var(--color-text-faint);">healthcare intelligence</p>

    <nav class="flex flex-col gap-1">
      {links.map((link) => (
        <a
          href={link.href}
          class="font-mono text-sm py-1.5 px-2 -mx-2 rounded transition-colors hover:bg-[var(--color-bg-secondary)]"
          style="color: var(--color-text-muted);"
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>

  <div class="flex flex-col gap-4">
    <div class="flex items-center gap-3">
      <a href="https://www.linkedin.com/in/cullen-paulisick/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
        <img src="/images/idpic.jpeg" alt="Cullen Paulisick" class="w-5 h-5 rounded-full object-cover transition-opacity hover:opacity-80" />
      </a>
      <a href="https://github.com/cpaulisi" target="_blank" rel="noopener noreferrer" aria-label="GitHub"
        class="transition-colors hover:opacity-80" style="color: var(--color-text-muted);">
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
      <a href="mailto:hello@cpaulisi.com" aria-label="Email"
        class="transition-colors hover:opacity-80" style="color: var(--color-text-muted);">
        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </a>
    </div>

    <button id="theme-toggle" class="flex items-center gap-2 font-mono text-xs py-1 transition-colors hover:opacity-80"
      style="color: var(--color-text-faint);" aria-label="Toggle theme">
      <svg class="sun-icon w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
      <svg class="moon-icon w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
      </svg>
      <span class="theme-label">theme</span>
    </button>

    <p class="text-[10px] font-mono" style="color: var(--color-text-faint);">
      &copy; {new Date().getFullYear()}
    </p>
  </div>
</aside>

<style>
  [data-theme="dark"] .sun-icon { display: none; }
  [data-theme="dark"] .moon-icon { display: block; }
  [data-theme="light"] .sun-icon { display: block; }
  [data-theme="light"] .moon-icon { display: none; }
</style>
