---
import { projects } from "../data/projects";
---

<section id="projects" class="py-16">
  <h2 class="font-mono font-bold text-lg mb-8" style="color: var(--color-text);">
    <span style="color: var(--color-accent);">#</span> Some projects I've worked on
  </h2>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
    {projects.map((project) => (
      <a href={`/projects/${project.slug}`}
        class="relative z-10 block p-4 border rounded transition-colors hover:border-(--color-accent)"
        style={`border-color: var(--color-border); background-color: var(--color-bg);`}>
        <h3 class="font-mono font-semibold text-sm mb-2" style="color: var(--color-text);">{project.title}</h3>
        <p class="text-xs mb-3" style="color: var(--color-text-muted);">{project.description}</p>
        <div class="flex flex-wrap gap-1.5">
          {project.tags.map((tag) => (
            <span class="font-mono text-[10px] px-1.5 py-0.5 rounded"
              style={`background-color: var(--color-tag-bg); color: var(--color-tag-text);`}>
              {tag}
            </span>
          ))}
        </div>
      </a>
    ))}
  </div>
</section>
